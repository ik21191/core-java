<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/" debug="false">

	<appender name="outfile" class="org.apache.log4j.rolling.RollingFileAppender">
		<rollingPolicy class="org.apache.log4j.rolling.TimeBasedRollingPolicy">
			<param name="FileNamePattern" value="/logs/appLogs/collection_%d.log" />
		</rollingPolicy>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d %-5p [%t] %C ${pom.version} (%F:%L) - %m%n" />
		</layout>
	</appender>
	
	<appender name="console" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<!-- <param name="ConversionPattern" value="%d %-5p [%t] %C (%F:%L) - %m%n" /> -->
		</layout>
	</appender>
	
	<root>
		<level value="INFO" />
		<!-- <level value="DEBUG" /> -->
		<appender-ref ref="outfile" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>